# Monitoring Dashboard Configuration

# Server Configuration
MONITORING_PORT=8000
UPDATE_INTERVAL=5000

# Environment
NODE_ENV=development

# Mock Data Generation (for testing)
GENERATE_MOCK_DATA=true

# Alert Configuration
EMAIL_ENABLED=false
SLACK_ENABLED=false
WEBHOOK_ENABLED=false

# Email Configuration (if enabled)
EMAIL_ENDPOINT=/api/alerts/email
EMAIL_FROM=alerts@example.com
EMAIL_TO=admin@example.com

# Slack Configuration (if enabled)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#alerts

# Webhook Configuration (if enabled)
WEBHOOK_URL=https://your-webhook.com/alerts

# Metrics Configuration
MAX_DATA_POINTS=1440
AGGREGATION_INTERVAL=60000
RETENTION_PERIOD=86400000

# Alert Thresholds
ALERT_ERROR_RATE_WARNING=0.1
ALERT_ERROR_RATE_CRITICAL=0.25
ALERT_RESPONSE_TIME_WARNING=5000
ALERT_RESPONSE_TIME_CRITICAL=10000
ALERT_CPU_WARNING=80
ALERT_CPU_CRITICAL=90
ALERT_MEMORY_WARNING=85
ALERT_MEMORY_CRITICAL=95

# Resource Monitoring
ENABLE_CPU_MONITORING=true
ENABLE_MEMORY_MONITORING=true
ENABLE_DISK_MONITORING=true
ENABLE_NETWORK_MONITORING=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_RECONNECT_ATTEMPTS=10
WS_RECONNECT_DELAY=3000

# CORS Configuration
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=info
LOG_FILE=monitoring.log
