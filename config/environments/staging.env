# Staging Environment Configuration
NODE_ENV=staging
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_PORT=3000
WEB_PORT=3001
PWA_PORT=3002
HOST=0.0.0.0

# Database Configuration
POSTGRES_HOST=ish-postgres-staging.internal
POSTGRES_PORT=5432
POSTGRES_DB=ish_automation_staging
POSTGRES_USER=ish_staging
POSTGRES_PASSWORD=${POSTGRES_PASSWORD_STAGING}

# Redis Configuration
REDIS_HOST=ish-redis-staging.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD_STAGING}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=300
CACHE_MAX_SIZE=500

# Feature Flags
ENABLE_MONITORING=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_DEBUG_ENDPOINTS=false

# External Services
ALLOWED_ORIGINS=https://staging.ish-automation.com,https://staging-web.ish-automation.com

# Deployment Configuration
DEPLOYMENT_TYPE=blue-green
HEALTH_CHECK_TIMEOUT=60
STARTUP_TIMEOUT=120
ROLLBACK_ON_FAILURE=true

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTING_ENABLED=true

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
