# Production Environment Configuration
NODE_ENV=production
DEBUG=false
LOG_LEVEL=warn

# API Configuration
API_PORT=3000
WEB_PORT=3001
PWA_PORT=3002
HOST=0.0.0.0

# Database Configuration
POSTGRES_HOST=ish-postgres-prod.internal
POSTGRES_PORT=5432
POSTGRES_DB=ish_automation
POSTGRES_USER=ish_prod
POSTGRES_PASSWORD=${POSTGRES_PASSWORD_PROD}
POSTGRES_SSL=true
POSTGRES_MAX_CONNECTIONS=50

# Redis Configuration
REDIS_HOST=ish-redis-prod.internal
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD_PROD}
REDIS_TLS=true

# Rate Limiting (Strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Feature Flags
ENABLE_MONITORING=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_DEBUG_ENDPOINTS=false

# External Services
ALLOWED_ORIGINS=https://ish-automation.com,https://web.ish-automation.com,https://pwa.ish-automation.com

# Deployment Configuration
DEPLOYMENT_TYPE=blue-green
HEALTH_CHECK_TIMEOUT=120
STARTUP_TIMEOUT=180
ROLLBACK_ON_FAILURE=true
REQUIRE_MANUAL_APPROVAL=true

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTING_ENABLED=true
ALERT_SLACK_WEBHOOK=${SLACK_WEBHOOK_PROD}
ALERT_PAGERDUTY_KEY=${PAGERDUTY_KEY_PROD}

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true
SECURITY_HEADERS=true
FORCE_HTTPS=true

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000
COMPRESSION_ENABLED=true

# Backup
AUTO_BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# Scaling
MIN_REPLICAS=3
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80
