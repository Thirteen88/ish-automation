# Production Environment Configuration for ISH Chat

# Environment
ENVIRONMENT=production

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_API_KEY=ish-chat-secure-key-2024

# CORS Configuration (Production URLs)
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://ishchat:POSTGRES_PASSWORD@postgres-primary:5432/ish_chat
DATABASE_READ_URL=postgresql://ishchat:POSTGRES_PASSWORD@postgres-replica1:5432/ish_chat,postgresql://ishchat:POSTGRES_PASSWORD@postgres-replica2:5432/ish_chat

# Redis Configuration
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=REDIS_PASSWORD

# AI Provider URLs
ZAI_API_URL=http://zai-provider:8001
OPENAI_API_URL=http://openai-provider:8002
CLAUDE_API_URL=http://claude-provider:8003
PERPLEXITY_API_URL=http://perplexity-provider:8004

# Android Configuration
ANDROID_TIMEOUT=30
SCREENSHOT_DIR=/tmp/screenshots
DEVICE_CHECK_INTERVAL=30

# AI Configuration
AI_TIMEOUT=30
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Rate Limiting (Production values)
RATE_LIMIT_PER_MINUTE=120

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/png","image/jpeg","image/jpg"]

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging (Production)
LOG_LEVEL=INFO
DEBUG=false

# Security
SSL_VERIFY=true
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Performance
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65